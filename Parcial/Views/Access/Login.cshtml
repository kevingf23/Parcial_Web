@{
    ViewBag.Title = "Iniciar Sesión";
    Layout = null;
}

<link rel="stylesheet" href="~/Content/Login.css">
<header>
    <nav id="navbar">
        <div class="containerMenu">
            <h1><a href="@Url.Action("Index", "Home")">Registro Academico</a></h1>
            <ul>
                <li><a href="@Url.Action("About", "Home")">Acerca de</a></li>
                <li><a href="@Url.Action("Contact", "Home")">Contacto</a></li>
            </ul>
        </div>
    </nav>
</header>

<div class="container">
    <div class="login-container">
        <div class="register">
            <h2>Registrarse</h2>
            @using (Html.BeginForm("Register", "Access", FormMethod.Post, new { @class = "form" }))
            {
                <form action="">
                    <input name="nuevoUsuario" type="text" placeholder="Usuario" class="nombre">
                    <input name="nuevaContraseña" type="password" placeholder="Contraseña" class="pass">
                    <input type="submit" class="submit" name="registrado" value="Registrarse">
                </form>
            }
        </div>
        <div class="login">
            <h2>Iniciar Sesión</h2>
            @using (Html.BeginForm("Login", "Access", FormMethod.Post, new { @class = "form" }))
            {
                <form action="">
                    <input name="user" type="text" placeholder="Usuario" class="nombre">
                    <input name="password" type="password" placeholder="Contraseña" class="pass">
                    <input type="submit" class="submit" value="Iniciar Sesión">
                </form>
            }
        </div>
    </div>
</div>


